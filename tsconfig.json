{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es6",
        "outDir": "dist",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules", "dist"]
}